          { "label": "GBP", "value": "GBP" },
          { "label": "HKD", "value": "HKD" },
          { "label": "HUF", "value": "HUF" },
          { "label": "ILS", "value": "ILS" },
          { "label": "JPY", "value": "JPY" },
          { "label": "MXN", "value": "MXN" },
